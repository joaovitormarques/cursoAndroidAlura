<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/item_foto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_action_user" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:textSize="28sp"
                android:textStyle="bold"
                android:hint="@string/campo_nome"/>

            <TextView
                android:id="@+id/item_telefone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:textSize="24sp"
                android:hint="@string/campo_telefone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/item_endereco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:hint="@string/campo_endereco"/>

            <TextView
                android:id="@+id/item_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:textSize="24sp"
                android:hint="@string/campo_site"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>